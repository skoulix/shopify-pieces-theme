{%- comment -%}
  Shared Section Styles
  Common CSS patterns used across multiple sections to reduce duplication

  Usage:
    {% render 'shared-section-styles' %}

  Include this once in sections that use common patterns like:
  - Title reveal animations
  - Section title styling
  - Intro animations
  - Container positioning
{%- endcomment -%}

<style>
  /* ========================================
     Section Title Reveal Animation
     Used in: hero, countdown, product, testimonials, etc.
  ======================================== */
  .title-line {
    display: block;
    overflow: hidden;
  }
  .title-line > span {
    display: block;
  }

  /* Title stagger indentation - adds visual interest */
  .title-staggered .title-line:nth-child(2) {
    margin-left: clamp(1rem, 5vw, 3rem);
  }
  .title-staggered .title-line:nth-child(3) {
    margin-left: clamp(2rem, 8vw, 5rem);
  }

  /* ========================================
     Section Header Styles
     Common heading + subheading patterns
  ======================================== */
  .section-header {
    margin-bottom: 2rem;
  }
  .section-header--center {
    text-align: center;
  }
  .section-header--right {
    text-align: right;
  }

  .section-title {
    font-family: var(--font-heading);
    font-size: clamp(1.75rem, 5vw, 3.5rem);
    font-weight: 700;
    letter-spacing: -0.03em;
    line-height: 1;
    color: var(--color-text);
  }
  .section-title--sm {
    font-size: clamp(1.25rem, 3vw, 2rem);
  }
  .section-title--lg {
    font-size: clamp(2.5rem, 7vw, 5rem);
  }

  .section-subtitle {
    font-size: 0.875rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-text-secondary);
    margin-bottom: 0.75rem;
  }

  .section-description {
    font-size: 0.875rem;
    line-height: 1.7;
    color: var(--color-text-secondary);
    max-width: 42rem;
    margin-top: 1rem;
  }
  .section-description--center {
    margin-left: auto;
    margin-right: auto;
  }

  /* ========================================
     Section Spacing Utilities
  ======================================== */
  .section-padding-sm {
    padding-top: 2rem;
    padding-bottom: 2rem;
  }
  .section-padding-md {
    padding-top: 4rem;
    padding-bottom: 4rem;
  }
  .section-padding-lg {
    padding-top: 6rem;
    padding-bottom: 6rem;
  }
  .section-padding-xl {
    padding-top: 8rem;
    padding-bottom: 8rem;
  }

  @media (min-width: 768px) {
    .section-padding-sm { padding-top: 3rem; padding-bottom: 3rem; }
    .section-padding-md { padding-top: 5rem; padding-bottom: 5rem; }
    .section-padding-lg { padding-top: 8rem; padding-bottom: 8rem; }
    .section-padding-xl { padding-top: 10rem; padding-bottom: 10rem; }
  }

  /* ========================================
     Grid Utilities for Product/Card Layouts
  ======================================== */
  .card-grid {
    display: grid;
    gap: 1.5rem;
    grid-template-columns: repeat(2, 1fr);
  }
  @media (min-width: 768px) {
    .card-grid { grid-template-columns: repeat(3, 1fr); gap: 2rem; }
  }
  @media (min-width: 1024px) {
    .card-grid { grid-template-columns: repeat(4, 1fr); }
  }

  .card-grid--2 { grid-template-columns: repeat(2, 1fr); }
  .card-grid--3 { grid-template-columns: repeat(2, 1fr); }
  @media (min-width: 768px) {
    .card-grid--3 { grid-template-columns: repeat(3, 1fr); }
  }

  /* ========================================
     Button Style Variants (supplement main .btn)
  ======================================== */
  .btn--icon {
    width: 2.5rem;
    height: 2.5rem;
    padding: 0;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
  }
  .btn--icon-lg {
    width: 3rem;
    height: 3rem;
  }

  .btn--ghost {
    background: transparent;
    border-color: transparent;
    color: var(--color-text);
  }
  .btn--ghost:hover {
    background: var(--color-text);
    color: var(--color-background);
  }

  /* ========================================
     Sticky Element Base
  ======================================== */
  .sticky-element {
    position: sticky;
    top: calc(var(--header-height, 80px) + 1rem);
  }

  /* ========================================
     Overlay Styles
  ======================================== */
  .overlay {
    position: absolute;
    inset: 0;
    pointer-events: none;
  }
  .overlay--gradient-bottom {
    background: linear-gradient(to top, rgba(0,0,0,0.6) 0%, transparent 50%);
  }
  .overlay--gradient-top {
    background: linear-gradient(to bottom, rgba(0,0,0,0.6) 0%, transparent 50%);
  }
  .overlay--dark {
    background: rgba(0,0,0,0.4);
  }
  .overlay--light {
    background: rgba(255,255,255,0.4);
  }
</style>
