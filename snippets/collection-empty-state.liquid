{%- comment -%}
  Collection Empty State
  Displayed when filters return no products
  Design matches cart empty state for consistency
{%- endcomment -%}

<div class="collection-empty-state col-span-full py-16 text-center" data-collection-empty>
  <div class="max-w-md mx-auto px-4">
    {%- comment -%} Icon {%- endcomment -%}
    <div class="mb-6">
      <i class="ph ph-funnel-simple text-6xl text-(--color-text-secondary) opacity-50"></i>
    </div>

    {%- comment -%} Title {%- endcomment -%}
    <h2 class="section-title text-2xl md:text-3xl">{{ 'collections.no_products_title' | t }}</h2>

    {%- comment -%} Description {%- endcomment -%}
    <p class="mt-4 text-(--color-text-secondary)">{{ 'collections.no_products_description' | t }}</p>

    {%- comment -%} Actions {%- endcomment -%}
    {%- assign btn_clear_filters = 'collections.clear_filters' | t -%}
    {%- assign btn_browse_all = 'collections.browse_all' | t -%}
    <div class="mt-10 flex flex-col sm:flex-row gap-4 justify-center">
      <a href="{{ collection.url }}" class="btn btn--primary" data-clear-filters>
        <i class="ph ph-funnel-simple-x"></i>
        {% render 'button-text', text: btn_clear_filters %}
      </a>
      <a href="{{ routes.all_products_collection_url }}" class="btn btn--secondary">
        <i class="ph ph-storefront"></i>
        {% render 'button-text', text: btn_browse_all %}
      </a>
    </div>
  </div>
</div>
