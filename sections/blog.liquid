{%- liquid
  if section.settings.full_width
    assign container_class = 'page-full'
  else
    assign container_class = 'page-container'
  endif
-%}

<style>
  .blog-hero-title { font-size: clamp(2.5rem, 10vw, 4.5rem); letter-spacing: -0.04em; line-height: 0.85; }
  @media (min-width: 1024px) { .blog-hero-title { font-size: clamp(3.5rem, 7vw, 6rem); } }
  @media (min-width: 1536px) { .blog-hero-title { font-size: clamp(4.5rem, 6vw, 8rem); } }
  .blog-hero-title-line:nth-child(2) { margin-left: clamp(1.5rem, 8vw, 6rem); }
  .blog-item--featured .blog-item-title { font-size: clamp(1.5rem, 3vw, 2.5rem); line-height: 1.1; letter-spacing: -0.02em; }
  .blog-item-author::before { content: ''; display: inline-block; width: 4px; height: 4px; border-radius: 50%; background: var(--color-text-secondary); margin-right: 0.5rem; vertical-align: middle; }
  .blog-item-image { clip-path: inset(0 100% 0 0); }
  .blog-wrapper.is-loading .blog-item-image { clip-path: inset(0 100% 0 0); }
</style>

<section class="blog-wrapper is-loading" data-blog-wrapper>
  <div class="pt-[--page-vertical-padding] pb-16">
    <div class="{{ container_class }}">
      <h1 class="blog-hero-title font-bold uppercase text-[--color-text]">
        {%- assign title_words = blog.title | split: ' ' -%}
        {%- for word in title_words -%}
          <span class="blog-hero-title-line block overflow-hidden">
            <span class="inline-block">{{ word }}</span>
          </span>
        {%- endfor -%}
      </h1>

      {% if section.settings.show_article_count %}
        <p class="page-header-subtitle mt-6">
          <span class="page-header-subtitle-line" data-subtitle-line></span>
          <span class="overflow-hidden"><span class="inline-block" data-subtitle-text>{{ blog.articles_count }} {{ blog.articles_count | pluralize: 'Article', 'Articles' }}</span></span>
        </p>
      {% endif %}
    </div>
  </div>

  {% paginate blog.articles by section.settings.articles_per_page %}
    <div class="{{ container_class }} pb-8">
      <div class="grid gap-12 md:grid-cols-2 md:gap-8 lg:grid-cols-3 lg:gap-10" data-blog-grid>
        {% for article in blog.articles %}
          {%- assign is_featured = false -%}
          {%- if forloop.first and section.settings.feature_first -%}
            {%- assign is_featured = true -%}
          {%- endif -%}
          <article
            class="blog-item bg-[--color-background-secondary] rounded-[--card-radius] overflow-hidden{% if is_featured %} blog-item--featured col-span-full lg:grid lg:grid-cols-2 lg:gap-16 lg:items-stretch{% endif %}"
            style="border: var(--card-border-width) solid var(--color-border); box-shadow: var(--card-shadow);"
            data-blog-item="{{ forloop.index0 }}"
            data-article-url="{{ article.url }}"
          >
            <a href="{{ article.url }}" class="blog-item-image block aspect-[16/10] overflow-hidden{% if is_featured %} aspect-[16/9] lg:aspect-auto lg:h-full{% endif %}">
              {% if article.image %}
                {{ article.image | image_url: width: 1200 | image_tag:
                  class: 'w-full h-full object-cover transition-transform duration-700 ease-out hover:scale-105',
                  loading: forloop.first | default: 'lazy',
                  sizes: '(max-width: 768px) 100vw, (max-width: 1024px) 50vw, 33vw',
                  widths: '400, 600, 800, 1200'
                }}
              {% else %}
                <div class="w-full h-full flex items-center justify-center bg-[--color-background-secondary]">
                  <i class="ph ph-article text-5xl text-[--color-text-secondary] opacity-30"></i>
                </div>
              {% endif %}
            </a>

            <div class="p-6{% if is_featured %} lg:py-8 lg:pr-8 lg:pl-0 lg:flex lg:flex-col lg:justify-center{% endif %}">
              {% if article.tags.size > 0 %}
                <p class="blog-item-category text-[0.65rem] font-semibold uppercase tracking-[0.15em] text-[--color-text-secondary] mb-3 overflow-hidden">
                  <span class="inline-block">{{ article.tags.first }}</span>
                </p>
              {% endif %}

              <h2 class="blog-item-title text-lg font-semibold leading-tight text-[--color-text]">
                <a href="{{ article.url }}" class="hover:text-[--color-primary] transition-colors">
                  {%- assign title_words = article.title | split: ' ' -%}
                  {%- for word in title_words -%}
                    <span class="overflow-hidden inline-block"><span class="inline-block">{{ word }}</span></span>{% unless forloop.last %} {% endunless %}
                  {%- endfor -%}
                </a>
              </h2>

              {% if section.settings.show_excerpt %}
                <p class="mt-3 text-sm leading-relaxed text-[--color-text-secondary] line-clamp-3{% if is_featured %} lg:text-[0.9375rem] lg:line-clamp-6{% endif %}">
                  {{ article.excerpt_or_content | strip_html | truncate: 160 }}
                </p>
              {% endif %}

              <div class="blog-item-meta mt-4 text-xs text-[--color-text-secondary] overflow-hidden">
                <span class="inline-block">
                  <time datetime="{{ article.published_at | date: '%Y-%m-%d' }}">
                    {{ article.published_at | date: '%b %d, %Y' }}
                  </time>
                </span>
                {% if section.settings.show_author %}
                  <span class="blog-item-author inline-block">{{ article.author }}</span>
                {% endif %}
              </div>

              <a href="{{ article.url }}" class="text-hover-reveal inline-flex items-center gap-2 mt-6 text-xs font-semibold uppercase tracking-widest text-[--color-text]">
                <span data-hover="Read Article">Read Article</span>
                <i class="ph ph-arrow-right"></i>
              </a>
            </div>
          </article>
        {% endfor %}
      </div>
    </div>

    {% if paginate.pages > 1 %}
      <nav class="{{ container_class }} flex items-center justify-center gap-2 py-12">
        {% if paginate.previous %}
          <a href="{{ paginate.previous.url }}" class="w-10 h-10 flex items-center justify-center rounded-full border border-[--color-border] text-[--color-text] hover:bg-[--color-background-secondary] transition-colors" aria-label="Previous page">
            <i class="ph ph-arrow-left"></i>
          </a>
        {% endif %}

        {% for part in paginate.parts %}
          {% if part.is_link %}
            <a href="{{ part.url }}" class="w-10 h-10 flex items-center justify-center text-sm text-[--color-text-secondary] hover:text-[--color-text] transition-colors">{{ part.title }}</a>
          {% else %}
            {% if part.title == paginate.current_page %}
              <span class="w-10 h-10 flex items-center justify-center text-sm font-semibold text-[--color-text] bg-[--color-background-secondary] rounded-full">{{ part.title }}</span>
            {% else %}
              <span class="w-10 h-10 flex items-center justify-center text-sm text-[--color-text-secondary]">{{ part.title }}</span>
            {% endif %}
          {% endif %}
        {% endfor %}

        {% if paginate.next %}
          <a href="{{ paginate.next.url }}" class="w-10 h-10 flex items-center justify-center rounded-full border border-[--color-border] text-[--color-text] hover:bg-[--color-background-secondary] transition-colors" aria-label="Next page">
            <i class="ph ph-arrow-right"></i>
          </a>
        {% endif %}
      </nav>
    {% endif %}
  {% endpaginate %}
</section>

<script>
(function() {
  function initBlogAnimation() {
    const wrapper = document.querySelector('[data-blog-wrapper]');
    if (!wrapper) return;
    if (wrapper.dataset.blogAnimInitialized) return;

    let gsap = window.gsap;
    if (!gsap && window.pieces && window.pieces.gsap) {
      gsap = window.pieces.gsap;
    }

    if (!gsap) {
      setTimeout(initBlogAnimation, 50);
      return;
    }

    wrapper.dataset.blogAnimInitialized = 'true';

    const heroTitle = wrapper.querySelectorAll('.blog-hero-title-line > span');
    const subtitleLine = wrapper.querySelector('[data-subtitle-line]');
    const subtitleText = wrapper.querySelector('[data-subtitle-text]');
    const blogItems = wrapper.querySelectorAll('[data-blog-item]');

    // Set initial states
    if (heroTitle.length) {
      gsap.set(heroTitle, { yPercent: 100 });
    }
    if (subtitleLine) {
      gsap.set(subtitleLine, { scaleX: 0 });
    }
    if (subtitleText) {
      gsap.set(subtitleText, { yPercent: 100 });
    }

    blogItems.forEach(item => {
      const image = item.querySelector('.blog-item-image');
      const category = item.querySelector('.blog-item-category span');
      const titleSpans = item.querySelectorAll('.blog-item-title .overflow-hidden span');
      const excerpt = item.querySelector('.blog-item-excerpt');
      const meta = item.querySelector('.blog-item-meta');
      const readLink = item.querySelector('.text-hover-reveal');

      if (category) gsap.set(category, { yPercent: 100 });
      if (titleSpans.length) gsap.set(titleSpans, { yPercent: 100 });
      if (excerpt) gsap.set(excerpt, { opacity: 0, y: 20 });
      if (meta) gsap.set(meta.querySelectorAll('.inline-block'), { yPercent: 100 });
      if (readLink) gsap.set(readLink, { opacity: 0, y: 10 });
    });

    // Create intro timeline
    const tl = gsap.timeline({
      onComplete: () => wrapper.classList.remove('is-loading')
    });

    // Animate hero title
    if (heroTitle.length) {
      tl.to(heroTitle, {
        yPercent: 0,
        duration: 1.2,
        ease: 'power4.out',
        stagger: 0.1
      }, 0);
    }

    // Animate subtitle line (draw from left)
    if (subtitleLine) {
      tl.to(subtitleLine, {
        scaleX: 1,
        duration: 0.8,
        ease: 'power3.out'
      }, 0.4);
    }

    // Animate subtitle text
    if (subtitleText) {
      tl.to(subtitleText, {
        yPercent: 0,
        duration: 0.8,
        ease: 'power4.out'
      }, 0.6);
    }

    // Animate blog items with stagger
    blogItems.forEach((item, index) => {
      const image = item.querySelector('.blog-item-image');
      const category = item.querySelector('.blog-item-category span');
      const titleSpans = item.querySelectorAll('.blog-item-title .overflow-hidden span');
      const excerpt = item.querySelector('.blog-item-excerpt');
      const meta = item.querySelector('.blog-item-meta');
      const readLink = item.querySelector('.text-hover-reveal');

      const delay = 0.5 + index * 0.1;

      // Image reveal
      tl.to(image, {
        clipPath: 'inset(0 0% 0 0)',
        duration: 1.6,
        ease: 'expo.inOut'
      }, delay);

      // Category
      if (category) {
        tl.to(category, {
          yPercent: 0,
          duration: 0.6,
          ease: 'power4.out'
        }, delay + 0.2);
      }

      // Title
      if (titleSpans.length) {
        tl.to(titleSpans, {
          yPercent: 0,
          duration: 0.8,
          ease: 'power4.out',
          stagger: 0.03
        }, delay + 0.25);
      }

      // Excerpt
      if (excerpt) {
        tl.to(excerpt, {
          opacity: 1,
          y: 0,
          duration: 0.6,
          ease: 'power3.out'
        }, delay + 0.35);
      }

      // Meta
      if (meta) {
        tl.to(meta.querySelectorAll('.inline-block'), {
          yPercent: 0,
          duration: 0.6,
          ease: 'power4.out',
          stagger: 0.05
        }, delay + 0.4);
      }

      // Read link
      if (readLink) {
        tl.to(readLink, {
          opacity: 1,
          y: 0,
          duration: 0.5,
          ease: 'power3.out'
        }, delay + 0.5);
      }
    });
  }

  // Initialize
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initBlogAnimation);
  } else {
    initBlogAnimation();
  }

  // Reinitialize after Swup
  window.addEventListener('swup:contentReplaced', () => {
    requestAnimationFrame(initBlogAnimation);
  });
})();
</script>

{% schema %}
{
  "name": "Blog",
  "settings": [
    {
      "type": "checkbox",
      "id": "full_width",
      "default": false,
      "label": "Full width"
    },
    {
      "type": "range",
      "id": "articles_per_page",
      "min": 3,
      "max": 24,
      "step": 3,
      "default": 9,
      "label": "Articles per page"
    },
    {
      "type": "checkbox",
      "id": "feature_first",
      "default": true,
      "label": "Feature first article"
    },
    {
      "type": "checkbox",
      "id": "show_excerpt",
      "default": true,
      "label": "Show excerpt"
    },
    {
      "type": "checkbox",
      "id": "show_author",
      "default": true,
      "label": "Show author"
    },
    {
      "type": "checkbox",
      "id": "show_article_count",
      "default": true,
      "label": "Show article count"
    }
  ]
}
{% endschema %}
