{%- comment -%}
  Email Signup Banner - Tailwind Version
  Newsletter signup with optional background image (password page)
{%- endcomment -%}

{%- liquid
  assign overlay_opacity = section.settings.image_overlay_opacity | divided_by: 100.0
-%}

<section class="relative overflow-hidden
  {% case section.settings.image_height %}
    {% when 'small' %}min-h-[300px]
    {% when 'medium' %}min-h-[400px] lg:min-h-[500px]
    {% when 'large' %}min-h-[500px] lg:min-h-[600px]
    {% when 'adapt-image' %}{% if section.settings.image != blank %}{% else %}min-h-[400px]{% endif %}
  {% endcase %}
">
  {%- comment -%} Background {%- endcomment -%}
  {%- if section.settings.show_background_image -%}
    <div class="absolute inset-0">
      {%- if section.settings.image != blank -%}
        {{
          section.settings.image
          | image_url: width: 1920
          | image_tag:
            class: 'w-full h-full object-cover',
            loading: 'lazy',
            widths: '400, 800, 1200, 1600, 1920'
        }}
      {%- else -%}
        <div class="w-full h-full bg-gradient-to-br from-neutral-100 to-neutral-200"></div>
      {%- endif -%}

      {%- if overlay_opacity > 0 -%}
        <div class="absolute inset-0 bg-black" style="opacity: {{ overlay_opacity }};"></div>
      {%- endif -%}
    </div>
  {%- endif -%}

  {%- comment -%} Adapt to image aspect ratio {%- endcomment -%}
  {%- if section.settings.image_height == 'adapt-image' and section.settings.image != blank -%}
    <div class="w-full" style="padding-bottom: {{ 1 | divided_by: section.settings.image.aspect_ratio | times: 100 }}%;"></div>
  {%- endif -%}

  {%- comment -%} Content {%- endcomment -%}
  <div class="{% if section.settings.image_height != 'adapt-image' %}absolute inset-0{% endif %} flex p-6 lg:p-12
    {% case section.settings.desktop_content_position %}
      {% when 'top-left' %}items-start justify-start
      {% when 'top-center' %}items-start justify-center
      {% when 'top-right' %}items-start justify-end
      {% when 'middle-left' %}items-center justify-start
      {% when 'middle-center' %}items-center justify-center
      {% when 'middle-right' %}items-center justify-end
      {% when 'bottom-left' %}items-end justify-start
      {% when 'bottom-center' %}items-end justify-center
      {% when 'bottom-right' %}items-end justify-end
    {% endcase %}
  ">
    <div class="w-full max-w-lg
      {% if section.settings.show_text_box %}bg-white/95 backdrop-blur-sm p-6 lg:p-8 rounded-xl shadow-lg{% endif %}
      {% case section.settings.desktop_content_alignment %}
        {% when 'left' %}text-left
        {% when 'center' %}text-center
        {% when 'right' %}text-right
      {% endcase %}
    ">
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'heading' -%}
            <h2
              class="text-2xl lg:text-3xl font-semibold {% if section.settings.show_text_box %}text-neutral-900{% else %}text-white{% endif %} mb-4"
              {{ block.shopify_attributes }}
            >
              {{ block.settings.heading | escape }}
            </h2>

          {%- when 'paragraph' -%}
            <div
              class="{% if section.settings.show_text_box %}text-neutral-600{% else %}text-white/90{% endif %} mb-6"
              {{ block.shopify_attributes }}
            >
              {{ block.settings.text }}
            </div>

          {%- when 'email_form' -%}
            <div {{ block.shopify_attributes }}>
              {% form 'customer' %}
                <input type="hidden" name="contact[tags]" value="newsletter">

                <div class="flex flex-col sm:flex-row gap-3 {% if section.settings.desktop_content_alignment == 'center' %}max-w-sm mx-auto{% endif %}">
                  <div class="flex-1 relative">
                    <input
                      id="NewsletterForm--{{ section.id }}"
                      type="email"
                      name="contact[email]"
                      class="w-full h-12 px-4 bg-white border border-neutral-300 rounded-lg text-neutral-900 placeholder:text-neutral-500 focus:outline-none focus:ring-2 focus:ring-neutral-900 focus:border-transparent transition-shadow"
                      value="{{ form.email }}"
                      aria-required="true"
                      autocorrect="off"
                      autocapitalize="off"
                      autocomplete="email"
                      {% if form.errors %}
                        autofocus
                        aria-invalid="true"
                        aria-describedby="Newsletter-error--{{ section.id }}"
                      {% elsif form.posted_successfully? %}
                        aria-describedby="Newsletter-success--{{ section.id }}"
                      {% endif %}
                      placeholder="{{ 'newsletter.label' | t }}"
                      required
                    >
                    <label class="sr-only" for="NewsletterForm--{{ section.id }}">
                      {{ 'newsletter.label' | t }}
                    </label>
                  </div>

                  <button
                    type="submit"
                    class="h-12 px-6 bg-neutral-900 text-white text-sm font-medium rounded-lg hover:bg-neutral-800 transition-colors flex items-center justify-center gap-2"
                    name="commit"
                  >
                    {{ 'newsletter.button_label' | t }}
                    {%- render 'icon', name: 'arrow-right', size: '16' -%}
                  </button>
                </div>

                {%- if form.errors -%}
                  <p class="mt-3 text-sm text-red-600 flex items-center {% if section.settings.desktop_content_alignment == 'center' %}justify-center{% endif %} gap-1" id="Newsletter-error--{{ section.id }}">
                    {%- render 'icon', name: 'warning', size: '16' -%}
                    {{ form.errors.translated_fields.email | capitalize }}
                    {{ form.errors.messages.email }}
                  </p>
                {%- endif -%}

                {%- if form.posted_successfully? -%}
                  <p
                    class="mt-3 text-sm text-green-600 flex items-center {% if section.settings.desktop_content_alignment == 'center' %}justify-center{% endif %} gap-1"
                    id="Newsletter-success--{{ section.id }}"
                    tabindex="-1"
                    autofocus
                  >
                    {%- render 'icon', name: 'check-circle', size: '16' -%}
                    {{ 'newsletter.success' | t }}
                  </p>
                {%- endif -%}
              {% endform %}
            </div>
        {%- endcase -%}
      {%- endfor -%}
    </div>
  </div>
</section>

