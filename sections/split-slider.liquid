{%- comment -%}
  Split Screen Slider - Two panels that slide in opposite directions
  Codrops-inspired split reveal effect
{%- endcomment -%}

<style>
  .split-slider-{{ section.id }} {
    position: relative;
    height: 100vh;
    min-height: 600px;
    max-height: 900px;
    overflow: hidden;
    background-color: {{ section.settings.background_color }};
  }

  .split-slider-container-{{ section.id }} {
    display: grid;
    grid-template-columns: 1fr;
    height: 100%;
  }

  @media (min-width: 1024px) {
    .split-slider-container-{{ section.id }} {
      grid-template-columns: 1fr 1fr;
    }
  }

  .split-slider-left-{{ section.id }} {
    position: relative;
    overflow: hidden;
    display: none;
  }

  @media (min-width: 1024px) {
    .split-slider-left-{{ section.id }} {
      display: block;
    }
  }

  .split-slider-right-{{ section.id }} {
    position: relative;
    overflow: hidden;
  }

  .split-slider-track-{{ section.id }} {
    position: absolute;
    inset: 0;
    display: flex;
    flex-direction: column;
    transition: transform 0.8s cubic-bezier(0.65, 0, 0.35, 1);
  }

  .split-slider-left-{{ section.id }} .split-slider-track-{{ section.id }} {
    flex-direction: column-reverse;
  }

  .split-slide-{{ section.id }} {
    flex-shrink: 0;
    width: 100%;
    height: 100%;
    position: relative;
  }

  .split-slide-image-{{ section.id }} {
    position: absolute;
    inset: 0;
    overflow: hidden;
  }

  .split-slide-image-{{ section.id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.8s cubic-bezier(0.65, 0, 0.35, 1);
  }

  .split-slide-{{ section.id }}.is-active .split-slide-image-{{ section.id }} img {
    transform: scale(1.05);
  }

  .split-slide-overlay-{{ section.id }} {
    position: absolute;
    inset: 0;
    background: linear-gradient(to top, rgba(0,0,0,0.6) 0%, rgba(0,0,0,0.2) 40%, rgba(0,0,0,0) 100%);
  }

  .split-slide-content-{{ section.id }} {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: clamp(2rem, 5vw, 4rem);
    color: #ffffff;
    z-index: 2;
  }

  .split-slide-label-{{ section.id }} {
    font-size: 0.65rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.2em;
    opacity: 0.7;
    margin-bottom: 1rem;
    transform: translateY(20px);
    opacity: 0;
    transition: all 0.6s cubic-bezier(0.4, 0, 0.2, 1) 0.2s;
  }

  .split-slide-title-{{ section.id }} {
    font-size: clamp(1.5rem, 3vw, 2.5rem);
    font-weight: 700;
    letter-spacing: -0.02em;
    line-height: 1.1;
    transform: translateY(30px);
    opacity: 0;
    transition: all 0.6s cubic-bezier(0.4, 0, 0.2, 1) 0.3s;
  }

  .split-slide-text-{{ section.id }} {
    margin-top: 1rem;
    font-size: 0.9375rem;
    line-height: 1.6;
    opacity: 0;
    max-width: 40ch;
    transform: translateY(20px);
    transition: all 0.6s cubic-bezier(0.4, 0, 0.2, 1) 0.4s;
  }

  .split-slide-{{ section.id }}.is-active .split-slide-label-{{ section.id }},
  .split-slide-{{ section.id }}.is-active .split-slide-title-{{ section.id }} {
    transform: translateY(0);
    opacity: 1;
  }

  .split-slide-{{ section.id }}.is-active .split-slide-text-{{ section.id }} {
    transform: translateY(0);
    opacity: 0.8;
  }

  /* Navigation */
  .split-slider-nav-{{ section.id }} {
    position: absolute;
    bottom: 2rem;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    gap: 0.75rem;
    z-index: 10;
  }

  @media (min-width: 1024px) {
    .split-slider-nav-{{ section.id }} {
      left: auto;
      right: 2rem;
      transform: none;
    }
  }

  .split-slider-nav-btn-{{ section.id }} {
    width: 48px;
    height: 48px;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    color: #ffffff;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .split-slider-nav-btn-{{ section.id }}:hover {
    background: rgba(255, 255, 255, 0.2);
    border-color: rgba(255, 255, 255, 0.4);
  }

  .split-slider-nav-btn-{{ section.id }} i {
    font-size: 1.25rem;
  }

  /* Counter */
  .split-slider-counter-{{ section.id }} {
    position: absolute;
    top: 2rem;
    right: 2rem;
    font-size: 0.75rem;
    font-weight: 600;
    letter-spacing: 0.1em;
    color: #ffffff;
    z-index: 10;
    opacity: 0.7;
  }

  @media (min-width: 1024px) {
    .split-slider-counter-{{ section.id }} {
      left: 50%;
      right: auto;
      transform: translateX(-50%);
    }
  }

  /* Progress bar */
  .split-slider-progress-{{ section.id }} {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: rgba(255, 255, 255, 0.2);
    z-index: 10;
  }

  .split-slider-progress-bar-{{ section.id }} {
    height: 100%;
    background: #ffffff;
    width: 0%;
    transition: width 0.1s linear;
  }

  /* Divider line */
  .split-slider-divider-{{ section.id }} {
    display: none;
  }

  @media (min-width: 1024px) {
    .split-slider-divider-{{ section.id }} {
      display: block;
      position: absolute;
      top: 0;
      bottom: 0;
      left: 50%;
      width: 1px;
      background: rgba(255, 255, 255, 0.2);
      z-index: 5;
    }
  }

  /* Animation disabled */
  html.animations-disabled .split-slide-label-{{ section.id }},
  html.animations-disabled .split-slide-title-{{ section.id }},
  html.animations-disabled .split-slide-text-{{ section.id }} {
    opacity: 1;
    transform: none;
  }
</style>

<section
  class="split-slider-{{ section.id }}"
  data-split-slider="{{ section.id }}"
  data-autoplay="{{ section.settings.autoplay }}"
  data-autoplay-speed="{{ section.settings.autoplay_speed }}"
>
  <div class="split-slider-progress-{{ section.id }}">
    <div class="split-slider-progress-bar-{{ section.id }}" data-split-progress></div>
  </div>

  <div class="split-slider-counter-{{ section.id }}">
    <span data-split-current>01</span> / <span>{{ section.blocks.size | prepend: '00' | slice: -2, 2 }}</span>
  </div>

  <div class="split-slider-container-{{ section.id }}">
    {%- comment -%} Left Panel (Desktop only) {%- endcomment -%}
    <div class="split-slider-left-{{ section.id }}">
      <div class="split-slider-track-{{ section.id }}" data-split-track-left>
        {% for block in section.blocks %}
          <div class="split-slide-{{ section.id }}{% if forloop.first %} is-active{% endif %}" data-split-slide-left>
            <div class="split-slide-image-{{ section.id }}">
              {% if block.settings.image_left != blank %}
                {{ block.settings.image_left | image_url: width: 1200 | image_tag:
                  loading: 'lazy',
                  sizes: '50vw',
                  widths: '600, 800, 1000, 1200'
                }}
              {% elsif block.settings.image != blank %}
                {{ block.settings.image | image_url: width: 1200 | image_tag:
                  loading: 'lazy',
                  sizes: '50vw',
                  widths: '600, 800, 1000, 1200'
                }}
              {% else %}
                {{ 'lifestyle-1' | placeholder_svg_tag: 'w-full h-full object-cover' }}
              {% endif %}
            </div>
            <div class="split-slide-overlay-{{ section.id }}"></div>
          </div>
        {% endfor %}
      </div>
    </div>

    {%- comment -%} Right Panel {%- endcomment -%}
    <div class="split-slider-right-{{ section.id }}">
      <div class="split-slider-track-{{ section.id }}" data-split-track-right>
        {% for block in section.blocks %}
          <div
            class="split-slide-{{ section.id }}{% if forloop.first %} is-active{% endif %}"
            data-split-slide-right
            {{ block.shopify_attributes }}
          >
            <div class="split-slide-image-{{ section.id }}">
              {% if block.settings.image != blank %}
                {{ block.settings.image | image_url: width: 1200 | image_tag:
                  loading: 'lazy',
                  sizes: '(max-width: 1024px) 100vw, 50vw',
                  widths: '600, 800, 1000, 1200'
                }}
              {% else %}
                {{ 'lifestyle-2' | placeholder_svg_tag: 'w-full h-full object-cover' }}
              {% endif %}
            </div>
            <div class="split-slide-overlay-{{ section.id }}"></div>

            <div class="split-slide-content-{{ section.id }}">
              {% if block.settings.label != blank %}
                <span class="split-slide-label-{{ section.id }}">{{ block.settings.label }}</span>
              {% endif %}
              {% if block.settings.title != blank %}
                <h3 class="split-slide-title-{{ section.id }} font-heading">{{ block.settings.title }}</h3>
              {% endif %}
              {% if block.settings.text != blank %}
                <p class="split-slide-text-{{ section.id }}">{{ block.settings.text }}</p>
              {% endif %}
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>

  <div class="split-slider-divider-{{ section.id }}"></div>

  {%- comment -%} Navigation {%- endcomment -%}
  <div class="split-slider-nav-{{ section.id }}">
    <button class="split-slider-nav-btn-{{ section.id }}" data-split-prev aria-label="Previous slide">
      <i class="ph ph-arrow-left"></i>
    </button>
    <button class="split-slider-nav-btn-{{ section.id }}" data-split-next aria-label="Next slide">
      <i class="ph ph-arrow-right"></i>
    </button>
  </div>
</section>

<script>
(function() {
  const section = document.querySelector('[data-split-slider="{{ section.id }}"]');
  if (!section || section.dataset.splitInitialized) return;
  section.dataset.splitInitialized = 'true';

  const trackLeft = section.querySelector('[data-split-track-left]');
  const trackRight = section.querySelector('[data-split-track-right]');
  const slidesLeft = section.querySelectorAll('[data-split-slide-left]');
  const slidesRight = section.querySelectorAll('[data-split-slide-right]');
  const prevBtn = section.querySelector('[data-split-prev]');
  const nextBtn = section.querySelector('[data-split-next]');
  const currentCounter = section.querySelector('[data-split-current]');
  const progressBar = section.querySelector('[data-split-progress]');

  const totalSlides = slidesRight.length;
  let currentIndex = 0;
  let autoplayInterval = null;
  let progressInterval = null;
  let progressValue = 0;

  const autoplay = section.dataset.autoplay === 'true';
  const autoplaySpeed = parseInt(section.dataset.autoplaySpeed) || 5000;

  function updateSlides(index) {
    // Update right slides
    slidesRight.forEach((slide, i) => {
      slide.classList.toggle('is-active', i === index);
    });

    // Update left slides (reversed order)
    slidesLeft.forEach((slide, i) => {
      const reversedIndex = totalSlides - 1 - index;
      slide.classList.toggle('is-active', i === reversedIndex);
    });

    // Move tracks
    const translateValue = index * 100;
    if (trackRight) {
      trackRight.style.transform = `translateY(-${translateValue}%)`;
    }
    if (trackLeft) {
      trackLeft.style.transform = `translateY(${translateValue}%)`;
    }

    // Update counter
    if (currentCounter) {
      currentCounter.textContent = (index + 1).toString().padStart(2, '0');
    }

    currentIndex = index;
    resetProgress();
  }

  function nextSlide() {
    const next = (currentIndex + 1) % totalSlides;
    updateSlides(next);
  }

  function prevSlide() {
    const prev = (currentIndex - 1 + totalSlides) % totalSlides;
    updateSlides(prev);
  }

  function resetProgress() {
    progressValue = 0;
    if (progressBar) {
      progressBar.style.width = '0%';
    }
  }

  function startAutoplay() {
    if (!autoplay) return;

    clearInterval(autoplayInterval);
    clearInterval(progressInterval);

    progressInterval = setInterval(() => {
      progressValue += (100 / (autoplaySpeed / 100));
      if (progressBar) {
        progressBar.style.width = `${Math.min(progressValue, 100)}%`;
      }
    }, 100);

    autoplayInterval = setInterval(() => {
      nextSlide();
    }, autoplaySpeed);
  }

  function stopAutoplay() {
    clearInterval(autoplayInterval);
    clearInterval(progressInterval);
  }

  // Event listeners
  if (prevBtn) {
    prevBtn.addEventListener('click', () => {
      prevSlide();
      stopAutoplay();
      startAutoplay();
    });
  }

  if (nextBtn) {
    nextBtn.addEventListener('click', () => {
      nextSlide();
      stopAutoplay();
      startAutoplay();
    });
  }

  // Pause on hover
  section.addEventListener('mouseenter', stopAutoplay);
  section.addEventListener('mouseleave', startAutoplay);

  // Touch/swipe support
  let touchStartY = 0;
  section.addEventListener('touchstart', (e) => {
    touchStartY = e.touches[0].clientY;
  }, { passive: true });

  section.addEventListener('touchend', (e) => {
    const touchEndY = e.changedTouches[0].clientY;
    const diff = touchStartY - touchEndY;

    if (Math.abs(diff) > 50) {
      if (diff > 0) {
        nextSlide();
      } else {
        prevSlide();
      }
      stopAutoplay();
      startAutoplay();
    }
  }, { passive: true });

  // Keyboard navigation
  section.addEventListener('keydown', (e) => {
    if (e.key === 'ArrowDown' || e.key === 'ArrowRight') {
      nextSlide();
      stopAutoplay();
      startAutoplay();
    } else if (e.key === 'ArrowUp' || e.key === 'ArrowLeft') {
      prevSlide();
      stopAutoplay();
      startAutoplay();
    }
  });

  // Initialize
  startAutoplay();
})();
</script>

{% schema %}
{
  "name": "Split Slider",
  "tag": "section",
  "class": "split-slider-section",
  "settings": [
    {
      "type": "header",
      "content": "Autoplay"
    },
    {
      "type": "checkbox",
      "id": "autoplay",
      "default": true,
      "label": "Enable autoplay"
    },
    {
      "type": "range",
      "id": "autoplay_speed",
      "min": 3000,
      "max": 10000,
      "step": 500,
      "default": 5000,
      "unit": "ms",
      "label": "Autoplay speed"
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "background_color",
      "default": "#000000",
      "label": "Background color"
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image (right panel)"
        },
        {
          "type": "image_picker",
          "id": "image_left",
          "label": "Image (left panel)",
          "info": "Optional. Uses right image if not set."
        },
        {
          "type": "text",
          "id": "label",
          "default": "Collection",
          "label": "Label"
        },
        {
          "type": "text",
          "id": "title",
          "default": "Slide Title",
          "label": "Title"
        },
        {
          "type": "textarea",
          "id": "text",
          "default": "Describe this slide content in a few words.",
          "label": "Text"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Split Slider",
      "blocks": [
        { "type": "slide", "settings": { "label": "New Collection", "title": "Spring Essentials", "text": "Discover our latest arrivals for the new season" } },
        { "type": "slide", "settings": { "label": "Limited Edition", "title": "Exclusive Drops", "text": "Get them before they're gone" } },
        { "type": "slide", "settings": { "label": "Best Sellers", "title": "Customer Favorites", "text": "See what everyone is loving" } }
      ]
    }
  ]
}
