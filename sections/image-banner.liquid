{%- comment -%}
  Image Banner Section - Tailwind Version
  Hero banner with image background and overlaid content
{%- endcomment -%}

{%- liquid
  assign content_position = section.settings.desktop_content_position
  assign content_alignment = section.settings.desktop_content_alignment
  assign mobile_alignment = section.settings.mobile_content_alignment
  assign overlay_opacity = section.settings.image_overlay_opacity | divided_by: 100.0
-%}

<section class="relative w-full overflow-hidden
  {% case section.settings.image_height %}
    {% when 'small' %}min-h-[300px] lg:min-h-[400px]
    {% when 'medium' %}min-h-[400px] lg:min-h-[600px]
    {% when 'large' %}min-h-[500px] lg:min-h-[80vh]
    {% when 'adapt' %}{% if section.settings.image != blank %}{% else %}min-h-[400px] lg:min-h-[600px]{% endif %}
  {% endcase %}
">
  {%- comment -%} Background Image {%- endcomment -%}
  <div class="absolute inset-0">
    {%- if section.settings.image != blank -%}
      {{
        section.settings.image
        | image_url: width: 1920
        | image_tag:
          class: 'w-full h-full object-cover',
          loading: 'eager',
          fetchpriority: 'high',
          widths: '400, 800, 1200, 1600, 1920'
      }}
    {%- elsif section.settings.image_2 != blank -%}
      {{
        section.settings.image_2
        | image_url: width: 1920
        | image_tag:
          class: 'w-full h-full object-cover',
          loading: 'eager',
          fetchpriority: 'high',
          widths: '400, 800, 1200, 1600, 1920'
      }}
    {%- else -%}
      <div class="w-full h-full bg-neutral-200 flex items-center justify-center">
        {%- render 'icon', name: 'image', size: '64' -%}
      </div>
    {%- endif -%}

    {%- comment -%} Overlay {%- endcomment -%}
    {%- if overlay_opacity > 0 -%}
      <div class="absolute inset-0 bg-black" style="opacity: {{ overlay_opacity }};"></div>
    {%- endif -%}
  </div>

  {%- comment -%} Adapt height to image {%- endcomment -%}
  {%- if section.settings.image_height == 'adapt' and section.settings.image != blank -%}
    <div class="w-full" style="padding-bottom: {{ 1 | divided_by: section.settings.image.aspect_ratio | times: 100 }}%;"></div>
  {%- endif -%}

  {%- comment -%} Content Overlay {%- endcomment -%}
  <div class="{% if section.settings.image_height != 'adapt' %}absolute inset-0{% endif %} flex p-6 lg:p-12
    {% case content_position %}
      {% when 'top-left' %}items-start justify-start
      {% when 'top-center' %}items-start justify-center
      {% when 'top-right' %}items-start justify-end
      {% when 'middle-left' %}items-center justify-start
      {% when 'middle-center' %}items-center justify-center
      {% when 'middle-right' %}items-center justify-end
      {% when 'bottom-left' %}items-end justify-start
      {% when 'bottom-center' %}items-end justify-center
      {% when 'bottom-right' %}items-end justify-end
    {% endcase %}
  ">
    <div class="max-w-2xl
      {% if section.settings.show_text_box %}bg-white/95 backdrop-blur-sm p-6 lg:p-10 rounded-xl shadow-lg{% endif %}
      {% case content_alignment %}
        {% when 'left' %}text-left
        {% when 'center' %}text-center
        {% when 'right' %}text-right
      {% endcase %}
      {% case mobile_alignment %}
        {% when 'left' %}max-lg:text-left
        {% when 'center' %}max-lg:text-center
        {% when 'right' %}max-lg:text-right
      {% endcase %}
    ">
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'heading' -%}
            <h2
              class="text-3xl lg:text-5xl font-semibold {% if section.settings.show_text_box %}text-neutral-900{% else %}text-white{% endif %} mb-4"
              {{ block.shopify_attributes }}
            >
              {{ block.settings.heading }}
            </h2>

          {%- when 'text' -%}
            <p
              class="text-base lg:text-lg {% if section.settings.show_text_box %}text-neutral-600{% else %}text-white/90{% endif %} mb-6"
              {{ block.shopify_attributes }}
            >
              {{ block.settings.text }}
            </p>

          {%- when 'buttons' -%}
            <div
              class="flex flex-wrap gap-3
                {% case content_alignment %}
                  {% when 'center' %}justify-center
                  {% when 'right' %}justify-end
                {% endcase %}
                {% case mobile_alignment %}
                  {% when 'center' %}max-lg:justify-center
                  {% when 'right' %}max-lg:justify-end
                {% endcase %}
              "
              {{ block.shopify_attributes }}
            >
              {%- if block.settings.button_label_1 != blank -%}
                <a
                  {% if block.settings.button_link_1 == blank %}
                    role="link" aria-disabled="true"
                  {% else %}
                    href="{{ block.settings.button_link_1 }}"
                  {% endif %}
                  class="inline-flex items-center gap-2 px-6 py-3 text-sm font-medium rounded-lg transition-colors
                    {% if block.settings.button_style_secondary_1 %}
                      {% if section.settings.show_text_box %}bg-white text-neutral-900 border border-neutral-300 hover:bg-neutral-50{% else %}bg-white/20 backdrop-blur-sm text-white border border-white/30 hover:bg-white/30{% endif %}
                    {% else %}
                      bg-neutral-900 text-white hover:bg-neutral-800
                    {% endif %}
                  "
                >
                  {{ block.settings.button_label_1 | escape }}
                </a>
              {%- endif -%}

              {%- if block.settings.button_label_2 != blank -%}
                <a
                  {% if block.settings.button_link_2 == blank %}
                    role="link" aria-disabled="true"
                  {% else %}
                    href="{{ block.settings.button_link_2 }}"
                  {% endif %}
                  class="inline-flex items-center gap-2 px-6 py-3 text-sm font-medium rounded-lg transition-colors
                    {% if block.settings.button_style_secondary_2 %}
                      {% if section.settings.show_text_box %}bg-white text-neutral-900 border border-neutral-300 hover:bg-neutral-50{% else %}bg-white/20 backdrop-blur-sm text-white border border-white/30 hover:bg-white/30{% endif %}
                    {% else %}
                      bg-neutral-900 text-white hover:bg-neutral-800
                    {% endif %}
                  "
                >
                  {{ block.settings.button_label_2 | escape }}
                </a>
              {%- endif -%}
            </div>
        {%- endcase -%}
      {%- endfor -%}
    </div>
  </div>
</section>

