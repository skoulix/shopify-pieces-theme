{%- comment -%}
  Header Section - Minimal Skeleton + Tailwind UI Design
  Integrates with Swup page transitions and Lenis smooth scroll
{%- endcomment -%}

{%- liquid
  if section.settings.full_width
    assign nav_class = 'page-full'
  else
    assign nav_class = 'page-container'
  endif
-%}

<header class="sticky top-0 z-40 border-b bg-[--color-background] border-[--color-border]" data-header>
  <nav class="{{ nav_class }} flex items-center justify-between py-4">
    {%- comment -%} Logo {%- endcomment -%}
    <div class="flex lg:flex-1">
      <a href="{{ routes.root_url }}" class="-m-1.5 p-1.5">
        <span class="sr-only">{{ shop.name }}</span>
        {% if settings.logo != blank %}
          {{ settings.logo | image_url: width: 300 | image_tag:
            class: 'h-8 w-auto',
            alt: shop.name,
            loading: 'eager'
          }}
        {% else %}
          <span class="text-xl font-bold text-[--color-text]">{{ shop.name }}</span>
        {% endif %}
      </a>
    </div>

    {%- comment -%} Mobile menu button {%- endcomment -%}
    <div class="flex lg:hidden">
      <button
        type="button"
        class="-m-2.5 inline-flex items-center justify-center rounded-md p-2.5 text-[--color-text]"
        onclick="document.getElementById('mobile-menu').classList.remove('hidden')"
      >
        <span class="sr-only">Open menu</span>
        <i class="ph ph-list text-2xl"></i>
      </button>
    </div>

    {%- comment -%} Desktop Navigation {%- endcomment -%}
    <div class="hidden lg:flex lg:gap-x-8">
      {% for link in section.settings.menu.links %}
        {%- liquid
          assign is_active = false
          if link.url == request.path
            assign is_active = true
          elsif link.url != '/' and request.path contains link.url
            assign is_active = true
          endif
        -%}
        <a
          href="{{ link.url }}"
          class="relative text-sm font-semibold leading-6 text-[--color-text] hover:text-[--color-primary] transition-colors after:absolute after:bottom-[-2px] after:left-0 after:h-0.5 after:bg-current after:transition-all after:duration-300 after:ease-out{% if is_active %} after:w-full{% else %} after:w-0 hover:after:w-full{% endif %}"
          data-nav-link
        >
          {{ link.title }}
        </a>
      {% endfor %}
    </div>

    {%- comment -%} Desktop Icons {%- endcomment -%}
    <div class="hidden lg:flex lg:flex-1 lg:justify-end lg:gap-x-4">
      {%- comment -%} Search {%- endcomment -%}
      <a href="{{ routes.search_url }}" class="p-2 text-[--color-text-secondary] hover:text-[--color-text] transition-colors">
        <span class="sr-only">Search</span>
        <i class="ph ph-magnifying-glass text-xl"></i>
      </a>

      {%- comment -%} Account {%- endcomment -%}
      {% if shop.customer_accounts_enabled %}
        <a href="{{ routes.account_url }}" class="p-2 text-[--color-text-secondary] hover:text-[--color-text] transition-colors">
          <span class="sr-only">Account</span>
          <i class="ph ph-user text-xl"></i>
        </a>
      {% endif %}

      {%- comment -%} Cart {%- endcomment -%}
      <a href="{{ routes.cart_url }}" class="group p-2 flex items-center text-[--color-text-secondary] hover:text-[--color-text] transition-colors">
        <i class="ph ph-bag text-xl"></i>
        <span class="ml-1 text-sm font-medium text-[--color-text] group-hover:text-[--color-primary]">{{ cart.item_count }}</span>
        <span class="sr-only">items in cart</span>
      </a>
    </div>
  </nav>

  {%- comment -%} Mobile Menu {%- endcomment -%}
  <div id="mobile-menu" class="hidden lg:hidden" role="dialog" aria-modal="true">
    <div class="fixed inset-0 z-50 bg-black/25" onclick="document.getElementById('mobile-menu').classList.add('hidden')"></div>
    <div class="fixed inset-y-0 right-0 z-50 w-full overflow-y-auto bg-[--color-background] px-6 py-6 sm:max-w-sm sm:ring-1 sm:ring-[--color-border]">
      <div class="flex items-center justify-between">
        <a href="{{ routes.root_url }}" class="-m-1.5 p-1.5">
          <span class="sr-only">{{ shop.name }}</span>
          {% if settings.logo != blank %}
            {{ settings.logo | image_url: width: 200 | image_tag:
              class: 'h-8 w-auto',
              alt: shop.name
            }}
          {% else %}
            <span class="text-lg font-bold text-[--color-text]">{{ shop.name }}</span>
          {% endif %}
        </a>
        <button
          type="button"
          class="-m-2.5 rounded-md p-2.5 text-[--color-text]"
          onclick="document.getElementById('mobile-menu').classList.add('hidden')"
        >
          <span class="sr-only">Close menu</span>
          <i class="ph ph-x text-2xl"></i>
        </button>
      </div>

      <div class="mt-6 flow-root">
        <div class="-my-6 divide-y divide-[--color-border]">
          <div class="space-y-2 py-6">
            {% for link in section.settings.menu.links %}
              {%- liquid
                assign is_active = false
                if link.url == request.path
                  assign is_active = true
                elsif link.url != '/' and request.path contains link.url
                  assign is_active = true
                endif
              -%}
              <a
                href="{{ link.url }}"
                class="-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-[--color-text] hover:bg-[--color-background-secondary]{% if is_active %} bg-[--color-background-secondary] text-[--color-primary]{% endif %}"
                data-nav-link
              >
                {{ link.title }}
              </a>
            {% endfor %}
          </div>

          <div class="py-6 space-y-2">
            {% if shop.customer_accounts_enabled %}
              <a href="{{ routes.account_url }}" class="-mx-3 block rounded-lg px-3 py-2.5 text-base font-semibold leading-7 text-[--color-text] hover:bg-[--color-background-secondary]">
                <i class="ph ph-user mr-2"></i>Account
              </a>
            {% endif %}
            <a href="{{ routes.cart_url }}" class="-mx-3 block rounded-lg px-3 py-2.5 text-base font-semibold leading-7 text-[--color-text] hover:bg-[--color-background-secondary]">
              <i class="ph ph-bag mr-2"></i>Cart ({{ cart.item_count }})
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>

<script>
(function() {
  /**
   * Update active nav links based on current URL
   * Called on initial load and after Swup page transitions
   */
  function updateActiveLinks() {
    const currentPath = window.location.pathname;
    const navLinks = document.querySelectorAll('[data-nav-link]');

    navLinks.forEach(link => {
      const linkPath = new URL(link.href, window.location.origin).pathname;

      // Remove trailing slashes for comparison
      const normalizedCurrent = currentPath.replace(/\/$/, '') || '/';
      const normalizedLink = linkPath.replace(/\/$/, '') || '/';

      let isActive = false;

      // Exact match
      if (normalizedCurrent === normalizedLink) {
        isActive = true;
      }
      // Partial match for nested pages (e.g., /collections matches /collections/all)
      else if (normalizedLink !== '/' && normalizedCurrent.startsWith(normalizedLink + '/')) {
        isActive = true;
      }
      // Special case: collection pages should match /collections link
      else if (normalizedLink !== '/' && normalizedCurrent.startsWith(normalizedLink)) {
        isActive = true;
      }

      link.classList.toggle('is-active', isActive);
    });
  }

  // Update on initial page load
  updateActiveLinks();

  // Update after Swup page transitions
  window.addEventListener('swup:contentReplaced', updateActiveLinks);

  // Also listen for popstate (browser back/forward)
  window.addEventListener('popstate', updateActiveLinks);
})();
</script>

{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "checkbox",
      "id": "full_width",
      "default": false,
      "label": "Full width"
    },
    {
      "type": "link_list",
      "id": "menu",
      "default": "main-menu",
      "label": "Menu"
    }
  ]
}
{% endschema %}
