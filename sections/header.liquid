{%- comment -%}
  Header Section - Minimal Skeleton + Tailwind UI Design
  Integrates with Swup page transitions and Lenis smooth scroll
{%- endcomment -%}

<header class="sticky top-0 z-40 bg-white border-b border-gray-200">
  <nav class="mx-auto flex max-w-7xl items-center justify-between px-4 py-4 sm:px-6 lg:px-8">
    {%- comment -%} Logo {%- endcomment -%}
    <div class="flex lg:flex-1">
      <a href="{{ routes.root_url }}" class="-m-1.5 p-1.5">
        <span class="sr-only">{{ shop.name }}</span>
        {% if settings.logo != blank %}
          {{ settings.logo | image_url: width: 300 | image_tag:
            class: 'h-8 w-auto',
            alt: shop.name,
            loading: 'eager'
          }}
        {% else %}
          <span class="text-xl font-bold text-gray-900">{{ shop.name }}</span>
        {% endif %}
      </a>
    </div>

    {%- comment -%} Mobile menu button {%- endcomment -%}
    <div class="flex lg:hidden">
      <button
        type="button"
        class="-m-2.5 inline-flex items-center justify-center rounded-md p-2.5 text-gray-700"
        onclick="document.getElementById('mobile-menu').classList.remove('hidden')"
      >
        <span class="sr-only">Open menu</span>
        <i class="ph ph-list text-2xl"></i>
      </button>
    </div>

    {%- comment -%} Desktop Navigation {%- endcomment -%}
    <div class="hidden lg:flex lg:gap-x-8">
      {% for link in section.settings.menu.links %}
        <a href="{{ link.url }}" class="text-sm font-semibold leading-6 text-gray-900 hover:text-indigo-600 transition-colors">
          {{ link.title }}
        </a>
      {% endfor %}
    </div>

    {%- comment -%} Desktop Icons {%- endcomment -%}
    <div class="hidden lg:flex lg:flex-1 lg:justify-end lg:gap-x-4">
      {%- comment -%} Search {%- endcomment -%}
      <a href="{{ routes.search_url }}" class="p-2 text-gray-400 hover:text-gray-500 transition-colors">
        <span class="sr-only">Search</span>
        <i class="ph ph-magnifying-glass text-xl"></i>
      </a>

      {%- comment -%} Account {%- endcomment -%}
      {% if shop.customer_accounts_enabled %}
        <a href="{{ routes.account_url }}" class="p-2 text-gray-400 hover:text-gray-500 transition-colors">
          <span class="sr-only">Account</span>
          <i class="ph ph-user text-xl"></i>
        </a>
      {% endif %}

      {%- comment -%} Cart {%- endcomment -%}
      <a href="{{ routes.cart_url }}" class="group p-2 flex items-center text-gray-400 hover:text-gray-500 transition-colors">
        <i class="ph ph-bag text-xl"></i>
        <span class="ml-1 text-sm font-medium text-gray-700 group-hover:text-gray-800">{{ cart.item_count }}</span>
        <span class="sr-only">items in cart</span>
      </a>
    </div>
  </nav>

  {%- comment -%} Mobile Menu {%- endcomment -%}
  <div id="mobile-menu" class="hidden lg:hidden" role="dialog" aria-modal="true">
    <div class="fixed inset-0 z-50 bg-black/25" onclick="document.getElementById('mobile-menu').classList.add('hidden')"></div>
    <div class="fixed inset-y-0 right-0 z-50 w-full overflow-y-auto bg-white px-6 py-6 sm:max-w-sm sm:ring-1 sm:ring-gray-900/10">
      <div class="flex items-center justify-between">
        <a href="{{ routes.root_url }}" class="-m-1.5 p-1.5">
          <span class="sr-only">{{ shop.name }}</span>
          {% if settings.logo != blank %}
            {{ settings.logo | image_url: width: 200 | image_tag:
              class: 'h-8 w-auto',
              alt: shop.name
            }}
          {% else %}
            <span class="text-lg font-bold text-gray-900">{{ shop.name }}</span>
          {% endif %}
        </a>
        <button
          type="button"
          class="-m-2.5 rounded-md p-2.5 text-gray-700"
          onclick="document.getElementById('mobile-menu').classList.add('hidden')"
        >
          <span class="sr-only">Close menu</span>
          <i class="ph ph-x text-2xl"></i>
        </button>
      </div>

      <div class="mt-6 flow-root">
        <div class="-my-6 divide-y divide-gray-500/10">
          <div class="space-y-2 py-6">
            {% for link in section.settings.menu.links %}
              <a href="{{ link.url }}" class="-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50">
                {{ link.title }}
              </a>
            {% endfor %}
          </div>

          <div class="py-6 space-y-2">
            {% if shop.customer_accounts_enabled %}
              <a href="{{ routes.account_url }}" class="-mx-3 block rounded-lg px-3 py-2.5 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50">
                <i class="ph ph-user mr-2"></i>Account
              </a>
            {% endif %}
            <a href="{{ routes.cart_url }}" class="-mx-3 block rounded-lg px-3 py-2.5 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50">
              <i class="ph ph-bag mr-2"></i>Cart ({{ cart.item_count }})
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>

{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "link_list",
      "id": "menu",
      "default": "main-menu",
      "label": "Menu"
    }
  ]
}
{% endschema %}
