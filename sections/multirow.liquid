{%- comment -%}
  Multirow Section - Tailwind Version
  Multiple rows of image + text content with alternating layouts
{%- endcomment -%}

{%- liquid
  if section.settings.image_layout contains 'right'
    assign first_image_right = true
  endif
-%}

<section class="py-12 lg:py-16">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="space-y-12 lg:space-y-16">
      {%- for block in section.blocks -%}
        {%- liquid
          if section.settings.image_layout contains 'alternate'
            assign is_even = forloop.index | modulo: 2
            if is_even == 0
              assign image_on_right = true
            else
              assign image_on_right = false
            endif
            if section.settings.image_layout == 'alternate-right'
              if is_even == 0
                assign image_on_right = false
              else
                assign image_on_right = true
              endif
            endif
          else
            if section.settings.image_layout == 'align-right'
              assign image_on_right = true
            else
              assign image_on_right = false
            endif
          endif
        -%}

        <div
          class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-12 items-center"
          {{ block.shopify_attributes }}
        >
          {%- comment -%} Image {%- endcomment -%}
          <div class="{% if image_on_right %}lg:order-2{% endif %}">
            <div class="relative overflow-hidden rounded-xl bg-neutral-100
              {% case section.settings.image_height %}
                {% when 'small' %}aspect-[4/3]
                {% when 'medium' %}aspect-square
                {% when 'large' %}aspect-[3/4]
              {% endcase %}
            "
            {% if section.settings.image_height == 'adapt' and block.settings.image != blank %}
              style="aspect-ratio: {{ block.settings.image.aspect_ratio }};"
            {% endif %}
            >
              {%- if block.settings.image != blank -%}
                {{
                  block.settings.image
                  | image_url: width: 1500
                  | image_tag:
                    class: 'w-full h-full object-cover',
                    loading: 'lazy',
                    widths: '375, 550, 750, 1000, 1250, 1500'
                }}
              {%- else -%}
                {{ 'detailed-apparel-1' | placeholder_svg_tag: 'w-full h-full object-cover text-neutral-300' }}
              {%- endif -%}
            </div>
          </div>

          {%- comment -%} Content {%- endcomment -%}
          <div class="{% if image_on_right %}lg:order-1{% endif %}
            {% case section.settings.desktop_content_alignment %}
              {% when 'left' %}text-left
              {% when 'center' %}text-center lg:text-center
              {% when 'right' %}text-right
            {% endcase %}
            {% case section.settings.mobile_content_alignment %}
              {% when 'left' %}text-left
              {% when 'center' %}text-center
              {% when 'right' %}text-right
            {% endcase %}
            lg:{% case section.settings.desktop_content_alignment %}{% when 'left' %}text-left{% when 'center' %}text-center{% when 'right' %}text-right{% endcase %}
          ">
            <div class="
              {% case section.settings.desktop_content_position %}
                {% when 'top' %}lg:self-start
                {% when 'middle' %}lg:self-center
                {% when 'bottom' %}lg:self-end
              {% endcase %}
            ">
              {%- if block.settings.caption != blank -%}
                <p class="text-sm font-medium tracking-wider uppercase text-neutral-500 mb-3">
                  {{ block.settings.caption | escape }}
                </p>
              {%- endif -%}

              {%- if block.settings.heading != blank -%}
                <h2 class="
                  {% case section.settings.heading_size %}
                    {% when 'h2' %}text-2xl lg:text-3xl
                    {% when 'h1' %}text-3xl lg:text-4xl
                    {% when 'h0' %}text-4xl lg:text-5xl
                    {% when 'hxl' %}text-5xl lg:text-6xl
                    {% when 'hxxl' %}text-6xl lg:text-7xl
                  {% endcase %}
                  font-semibold text-neutral-900 leading-tight
                ">
                  {{ block.settings.heading }}
                </h2>
              {%- endif -%}

              {%- if block.settings.text != blank -%}
                <div class="mt-4 text-neutral-600 {% if section.settings.text_style == 'subtitle' %}text-lg{% endif %} prose prose-neutral max-w-none">
                  {{ block.settings.text }}
                </div>
              {%- endif -%}

              {%- if block.settings.button_label != blank -%}
                <div class="mt-6">
                  <a
                    {% if block.settings.button_link == blank %}role="link" aria-disabled="true"{% else %}href="{{ block.settings.button_link }}"{% endif %}
                    class="inline-flex items-center gap-2 px-6 py-3 text-sm font-medium rounded-lg transition-colors
                      {% if section.settings.button_style == 'secondary' %}
                        border border-neutral-300 text-neutral-900 hover:bg-neutral-50
                      {% else %}
                        bg-neutral-900 text-white hover:bg-neutral-800
                      {% endif %}
                    "
                  >
                    {{ block.settings.button_label | escape }}
                  </a>
                </div>
              {%- endif -%}
            </div>
          </div>
        </div>
      {%- endfor -%}
    </div>
  </div>
</section>

