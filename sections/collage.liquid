{%- comment -%}
  Collage Section - Tailwind Version
  Flexbox layout with equal columns for images, products, collections, and videos
{%- endcomment -%}

<section class="py-8 lg:py-12">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    {%- if section.settings.heading != blank -%}
      <h2 class="text-2xl lg:text-3xl font-semibold text-neutral-900 mb-8">
        {{ section.settings.heading }}
      </h2>
    {%- endif -%}

    {%- liquid
      assign block_count = section.blocks.size
      assign mobile_layout = section.settings.mobile_layout
    -%}

    {%- comment -%} Flexbox Layout - Equal Columns {%- endcomment -%}
    <div class="flex flex-wrap gap-4 lg:gap-6
      {%- if mobile_layout == 'collage' %} -mx-2{% endif %}">

      {%- for block in section.blocks -%}
        {%- liquid
          assign placeholder_image_index = forloop.index0 | modulo: 4 | plus: 1

          # Calculate flex basis for equal columns
          if block_count == 1
            assign flex_basis = 'w-full'
          elsif block_count == 2
            assign flex_basis = 'w-full lg:w-[calc(50%-0.75rem)]'
          else
            assign flex_basis = 'w-full lg:w-[calc(33.333%-1rem)]'
          endif

          # Mobile layout adjustments
          if mobile_layout == 'collage'
            assign mobile_flex = 'w-[calc(50%-0.5rem)] mx-2 lg:mx-0'
          else
            assign mobile_flex = ''
          endif
        -%}

        <div
          class="group flex-shrink-0 {{ flex_basis }} {{ mobile_flex }}"
          {{ block.shopify_attributes }}
        >
          {%- case block.type -%}
            {%- when 'image' -%}
              <div class="relative h-full min-h-[200px] lg:min-h-[300px] rounded-xl overflow-hidden bg-neutral-100">
                {%- if block.settings.image != blank -%}
                  {{
                    block.settings.image
                    | image_url: width: 1600
                    | image_tag:
                      class: 'w-full h-full object-cover transition-transform duration-500 group-hover:scale-105',
                      loading: 'lazy',
                      widths: '400, 600, 800, 1000, 1200, 1600'
                  }}
                {%- else -%}
                  <div class="w-full h-full flex items-center justify-center text-neutral-400">
                    {%- render 'icon', name: 'image', size: '48' -%}
                  </div>
                {%- endif -%}
              </div>

            {%- when 'product' -%}
              {%- assign placeholder_image = 'product-apparel-' | append: placeholder_image_index -%}
              <div class="h-full">
                {% render 'card-product',
                  card_product: block.settings.product,
                  media_aspect_ratio: 'adapt',
                  show_secondary_image: block.settings.second_image,
                  extend_height: true,
                  placeholder_image: placeholder_image
                %}
              </div>

            {%- when 'collection' -%}
              {%- assign placeholder_image = 'collection-apparel-' | append: placeholder_image_index -%}
              <div class="h-full">
                {% render 'card-collection',
                  card_collection: block.settings.collection,
                  media_aspect_ratio: 'adapt',
                  columns: 2,
                  extend_height: true,
                  placeholder_image: placeholder_image
                %}
              </div>

            {%- when 'video' -%}
              <div class="relative h-full min-h-[200px] lg:min-h-[300px] rounded-xl overflow-hidden bg-neutral-900">
                <modal-opener data-modal="#PopupModal-{{ block.id }}" class="block h-full">
                  <button
                    type="button"
                    class="relative w-full h-full cursor-pointer"
                    aria-label="{{ 'sections.video.load_video' | t: description: block.settings.description | escape }}"
                    aria-haspopup="dialog"
                    data-media-id="{{ block.settings.video_url.id }}"
                  >
                    {%- comment -%} Cover Image {%- endcomment -%}
                    {%- if block.settings.cover_image != blank -%}
                      {{
                        block.settings.cover_image
                        | image_url: width: 1600
                        | image_tag:
                          class: 'w-full h-full object-cover transition-transform duration-500 group-hover:scale-105',
                          loading: 'lazy',
                          widths: '400, 600, 800, 1000, 1200, 1600'
                      }}
                    {%- else -%}
                      <div class="w-full h-full bg-neutral-800"></div>
                    {%- endif -%}

                    {%- comment -%} Play Button Overlay {%- endcomment -%}
                    <div class="absolute inset-0 flex items-center justify-center">
                      <span class="flex items-center justify-center w-16 h-16 bg-white/90 backdrop-blur-sm rounded-full text-neutral-900 shadow-lg group-hover:scale-110 transition-transform">
                        {%- render 'icon', name: 'play', size: '24' -%}
                      </span>
                    </div>
                  </button>
                </modal-opener>

                {%- comment -%} Video Modal {%- endcomment -%}
                <modal-dialog
                  id="PopupModal-{{ block.id }}"
                  class="fixed inset-0 z-50 hidden items-center justify-center bg-black/80 backdrop-blur-sm"
                >
                  <div
                    class="relative w-full max-w-4xl mx-4 bg-black rounded-xl overflow-hidden"
                    role="dialog"
                    aria-label="{{ block.settings.description | escape }}"
                    aria-modal="true"
                    tabindex="-1"
                  >
                    <button
                      type="button"
                      class="absolute top-4 right-4 z-10 p-2 bg-white/10 hover:bg-white/20 rounded-full text-white transition-colors"
                      aria-label="{{ 'accessibility.close' | t }}"
                    >
                      {%- render 'icon', name: 'x', size: '20' -%}
                    </button>

                    <div class="aspect-video">
                      <deferred-media class="w-full h-full">
                        <template>
                          {%- if block.settings.video_url.type == 'youtube' -%}
                            <iframe
                              src="https://www.youtube.com/embed/{{ block.settings.video_url.id }}?enablejsapi=1&autoplay=1"
                              class="w-full h-full"
                              allow="autoplay; encrypted-media"
                              allowfullscreen
                              title="{{ block.settings.description | escape }}"
                            ></iframe>
                          {%- else -%}
                            <iframe
                              src="https://player.vimeo.com/video/{{ block.settings.video_url.id }}?autoplay=1"
                              class="w-full h-full"
                              allow="autoplay; encrypted-media"
                              allowfullscreen
                              title="{{ block.settings.description | escape }}"
                            ></iframe>
                          {%- endif -%}
                        </template>
                      </deferred-media>
                    </div>
                  </div>
                </modal-dialog>
              </div>
          {%- endcase -%}
        </div>
      {%- endfor -%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "t:sections.collage.name",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "inline_richtext",
      "id": "heading",
      "default": "t:sections.collage.settings.heading.default",
      "label": "t:sections.collage.settings.heading.label"
    },
    {
      "type": "select",
      "id": "mobile_layout",
      "options": [
        {
          "value": "collage",
          "label": "t:sections.collage.settings.mobile_layout.options__1.label"
        },
        {
          "value": "column",
          "label": "t:sections.collage.settings.mobile_layout.options__2.label"
        }
      ],
      "default": "column",
      "label": "t:sections.collage.settings.mobile_layout.label"
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "t:sections.collage.blocks.image.name",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "t:sections.collage.blocks.image.settings.image.label"
        }
      ]
    },
    {
      "type": "product",
      "name": "t:sections.collage.blocks.product.name",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "t:sections.collage.blocks.product.settings.product.label"
        },
        {
          "type": "checkbox",
          "id": "second_image",
          "default": false,
          "label": "t:sections.collage.blocks.product.settings.second_image.label"
        }
      ]
    },
    {
      "type": "collection",
      "name": "t:sections.collage.blocks.collection.name",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "t:sections.collage.blocks.collection.settings.collection.label"
        }
      ]
    },
    {
      "type": "video",
      "name": "t:sections.collage.blocks.video.name",
      "settings": [
        {
          "type": "image_picker",
          "id": "cover_image",
          "label": "t:sections.collage.blocks.video.settings.cover_image.label"
        },
        {
          "type": "video_url",
          "id": "video_url",
          "accept": ["youtube", "vimeo"],
          "label": "t:sections.collage.blocks.video.settings.video_url.label",
          "info": "t:sections.collage.blocks.video.settings.video_url.info"
        },
        {
          "type": "text",
          "id": "description",
          "default": "t:sections.collage.blocks.video.settings.description.default",
          "label": "t:sections.collage.blocks.video.settings.description.label",
          "info": "t:sections.collage.blocks.video.settings.description.info"
        }
      ]
    }
  ],
  "max_blocks": 3,
  "presets": [
    {
      "name": "t:sections.collage.presets.name",
      "blocks": [
        {
          "type": "image"
        },
        {
          "type": "product"
        },
        {
          "type": "collection"
        }
      ]
    }
  ]
}
{% endschema %}
