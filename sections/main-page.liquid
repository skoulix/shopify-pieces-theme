{%- comment -%}
  Main Page Section - Tailwind Version
  Basic page content with title and rich text
{%- endcomment -%}

<section class="py-12 lg:py-16">
  <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
    <h1 class="text-3xl lg:text-4xl font-semibold text-neutral-900 mb-8">
      {{ page.title | escape }}
    </h1>
    <div class="prose prose-neutral prose-lg max-w-none">
      {{ page.content }}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "t:sections.main-page.name",
  "tag": "section",
  "class": "section"
}
{% endschema %}
