{%- comment -%}
  Footer Section - Minimal Skeleton + Tailwind UI Design
{%- endcomment -%}

<footer class="bg-white border-t border-gray-200">
  <div class="mx-auto max-w-7xl px-4 py-12 sm:px-6 lg:px-8">
    <div class="flex flex-col items-center space-y-8">

      {%- comment -%} Navigation Links {%- endcomment -%}
      {% if section.settings.menu != blank %}
        <nav class="flex flex-wrap justify-center gap-x-8 gap-y-2">
          {% for link in section.settings.menu.links %}
            <a href="{{ link.url }}" class="text-sm text-gray-600 hover:text-gray-900 transition-colors">
              {{ link.title }}
            </a>
          {% endfor %}
        </nav>
      {% endif %}

      {%- comment -%} Social Icons {%- endcomment -%}
      {% if section.settings.show_social %}
        <div class="flex gap-x-6">
          {% if settings.social_facebook_link != blank %}
            <a href="{{ settings.social_facebook_link }}" class="text-gray-400 hover:text-gray-500 transition-colors">
              <span class="sr-only">Facebook</span>
              <i class="ph ph-facebook-logo text-xl"></i>
            </a>
          {% endif %}
          {% if settings.social_instagram_link != blank %}
            <a href="{{ settings.social_instagram_link }}" class="text-gray-400 hover:text-gray-500 transition-colors">
              <span class="sr-only">Instagram</span>
              <i class="ph ph-instagram-logo text-xl"></i>
            </a>
          {% endif %}
          {% if settings.social_twitter_link != blank %}
            <a href="{{ settings.social_twitter_link }}" class="text-gray-400 hover:text-gray-500 transition-colors">
              <span class="sr-only">X</span>
              <i class="ph ph-x-logo text-xl"></i>
            </a>
          {% endif %}
          {% if settings.social_tiktok_link != blank %}
            <a href="{{ settings.social_tiktok_link }}" class="text-gray-400 hover:text-gray-500 transition-colors">
              <span class="sr-only">TikTok</span>
              <i class="ph ph-tiktok-logo text-xl"></i>
            </a>
          {% endif %}
          {% if settings.social_youtube_link != blank %}
            <a href="{{ settings.social_youtube_link }}" class="text-gray-400 hover:text-gray-500 transition-colors">
              <span class="sr-only">YouTube</span>
              <i class="ph ph-youtube-logo text-xl"></i>
            </a>
          {% endif %}
          {% if settings.social_pinterest_link != blank %}
            <a href="{{ settings.social_pinterest_link }}" class="text-gray-400 hover:text-gray-500 transition-colors">
              <span class="sr-only">Pinterest</span>
              <i class="ph ph-pinterest-logo text-xl"></i>
            </a>
          {% endif %}
        </div>
      {% endif %}

      {%- comment -%} Payment Icons {%- endcomment -%}
      {% if section.settings.show_payment_icons %}
        <div class="flex flex-wrap justify-center gap-2">
          {% for type in shop.enabled_payment_types %}
            {{ type | payment_type_svg_tag: class: 'h-6' }}
          {% endfor %}
        </div>
      {% endif %}

      {%- comment -%} Copyright {%- endcomment -%}
      <p class="text-center text-xs text-gray-500">
        &copy; {{ 'now' | date: '%Y' }} {{ shop.name }}. All rights reserved.
      </p>

    </div>
  </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "link_list",
      "id": "menu",
      "label": "Menu"
    },
    {
      "type": "checkbox",
      "id": "show_social",
      "label": "Show social icons",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_payment_icons",
      "label": "Show payment icons",
      "default": true
    }
  ]
}
{% endschema %}
